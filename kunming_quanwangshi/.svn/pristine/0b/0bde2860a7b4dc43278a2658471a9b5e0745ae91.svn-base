.home {
	background-image: url(../img/home/bg.jpg);
	background-repeat: no-repeat;
}

#focus {
	position: absolute;
}

#tabs_header {
	position: absolute;
	height: 48px;
	top: 74px;
	left: 0;
	width: 1116px;
	padding: 0 82px;
	white-space: nowrap;
	word-break: keep-all;
	overflow: hidden;
}

.tab_header {
	display: inline-block;
	font-size: 27px;
	color: #757579;
	height: 48px;
	line-height: 48px;
	text-align: center;
	padding: 0 14px;
	margin-right: 18px;
}

.tab_header:last-child {
	margin-right: 82px;
}

.tab_header.tab_select {
	color: #fff;
}

#tab_focus {
	position: absolute;
	height: 46px;
	top: 74px;
	border: 1px solid #fff;
	border-radius: 2px;
	visibility: hidden;
}

.tab_block {
	position: absolute;
}

#block_focus {
	position: absolute;
	visibility: hidden;
	border: 3px solid #fff;
	border-radius: 3px;
}

#search {
	position: absolute;
	width: 42px;
	height: 38px;
	top: 22px;
	left: 1108px;
	background-image: url(../img/home/search_dark.png);
	background-repeat: no-repeat;
}

#search.focus {
	background-image: url(../img/home/search_white.png);
}

#mine {
	position: absolute;
	width: 42px;
	height: 38px;
	top: 21px;
	left: 1178px;
	background-image: url(../img/home/mine_dark.png);
	background-repeat: no-repeat;
}

#mine.focus {
	background-image: url(../img/home/mine_white.png);
}

.block_poster {
	display: block;
	width: 100%;
	height: 100%;
}
